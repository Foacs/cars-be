{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "InterventionOutputModel",
  "type": "object",
  "properties": {
    "year": {"type": "integer"},
    "number": {"type": "integer"},
    "status": {"type": "string"},
    "description": {"type": "string"},
    "mileage": {"type": "integer"},
    "estimatedTime": {"type": "number"},
    "realTime": {"type": "number"},
    "amount": {"type": "number"},
    "paidAmount": {"type": "number"},
    "comments": {"type": "string"},
    "car": {
      "$ref": "#/definitions/Car"
    },
    "tasks": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Task"
      }
    }
  },
  "definitions": {
    "Car": {
      "type": "object",
      "properties": {
        "registration": {"type": "string"}
      }
    },
    "Task": {
      "type": "object",
      "properties": {
        "label": {"type": "string"},
        "steps": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Step"
          }
        }
      }
    },
    "Step": {
      "type": "object",
      "properties": {
        "type": {"type": "string"},
        "description": {"type": "string"},
        "done": {"type": "integer"}
      }
    }
  }
}
